      var id = getPartAfterUnderscore(event.srcElement.id);
      console.log(id);
      // TODO: get the number of minutes from the dropdown
      var completed = moment(new Date()).add(5,'m').toDate();
      $.ajax({
          url: '/api/v1/rides/'+ id,
          type: 'PUT',
          data: {"eta":completed},
          success: function(result) {
              console.log("done!");
