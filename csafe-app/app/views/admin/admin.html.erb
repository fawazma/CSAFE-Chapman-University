              App.eta.notify(result.data.userID, result.data.eta);
              // refreshes the table
              $( "#dataTable-RequestRides" ).load( "admin.html #dataTable-RequestRides" );
              $( "#dataTable-AcceptedRides" ).load( "admin.html #dataTable-AcceptedRides" );
          }
