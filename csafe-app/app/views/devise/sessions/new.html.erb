<div class="limiter">
  <div class="wrap-login100">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login100-form validate-form'}) do |f| %>
      <span class="login100-form-title p-b-43">
          Login
      </span>

      <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input100" %>
        <span class="focus-input100"></span>
        <span class="label-input100">Email</span>
      </div>

      <div class="wrap-input100 validate-input" data-validate="Password is required">
        <%= f.password_field :password, autocomplete: "off", class: "input100" %>
        <span class="focus-input100"></span>
        <span class="label-input100">Password</span>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, class: "input-checkbox100" %>
          <%= f.label :remember_me, class: "label-checkbox100" %>
        </div>
      <% end -%>

      <div class="container-login100-form-btn">
        <%= f.submit "Log in", class: "login100-form-btn" %>
      </div>

      <div class="container-login100-form-btn">
        <%= link_to "Sign Up", new_user_registration_path, class: "login100-form-btn signupOrange" %>

      </div>

      <div class="text-center p-t-46 p-b-20">
        <span class="txt2">
            Made by Students of Chapman University
        </span>
      </div>

    <% end %>


    <div class="login100-more" style="background-image: url('images/bg-01.jpg');">
